{
  "manifest_version": 3,
  "name": "Smart Tab",
  "version": "1.0",
  "description": "Opens a new tab with a list of closed tabs and closes all other tabs",
  "permissions": [
    "tabs",
    "storage",
    "sessions",
    "background"
  ],
  "host_permissions": [
    "https://www.google.com/"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["closed_tabs.html", "closed_tabs.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  }
}